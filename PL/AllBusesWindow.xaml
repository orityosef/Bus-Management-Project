<Window x:Class="PL.AllBusesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AllBusesWindow" Height="472.8" Width="735.2">
    <Grid>
        <Grid Margin="10" RenderTransformOrigin="0.497,0.581">
            <ListView x:Name="AllBuses" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Bus License" Width="100" DisplayMemberBinding="{Binding LicenseNum}" />
                        <GridViewColumn Header="KM" Width="60" DisplayMemberBinding="{Binding TotalTrip}" />
                        <GridViewColumn Header="Start Date" Width="150" DisplayMemberBinding="{Binding Fromdate}" />
                        <GridViewColumn Header="Fuel" Width="60" DisplayMemberBinding="{Binding FuelRemain}" />
                        <GridViewColumn Header="status" Width="80" DisplayMemberBinding="{Binding Status}" />
